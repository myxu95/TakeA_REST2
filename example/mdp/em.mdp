;====================================================
; Energy minimization
;====================================================

;----------------------------------------------------
; RUN CONTROL & MINIMIZATION
;----------------------------------------------------
define                 = -DFLEXIBLE 
integrator             = steep
nsteps                 = 50000
emtol                  = 500
emstep                 = 0.01
nstcomm                = 1

;----------------------------------------------------
; OUTPUT CONTROL
;----------------------------------------------------
nstxout                = 0       ; save coordinates to .trr every 250 steps
nstvout                = 0          ; don't save velocities to .trr
nstfout                = 0          ; don't save forces to .trr

nstxout-compressed     = 0       ; xtc compressed trajectory output every 500 steps
compressed-x-precision = 1000
nstlog                 = 100        ; update log file every 500 steps
nstenergy              = 100        ; save energies every 500 steps
nstcalcenergy          = 100

;----------------------------------------------------
; NEIGHBOR SEARCHING
;----------------------------------------------------
cutoff-scheme          = Verlet
ns-type                = grid
nstlist                = 1
rlist                  = 1.0

;----------------------------------------------------
; BONDS
;----------------------------------------------------
constraints            = h-bonds
constraint-algorithm     = lincs
lincs_iter               = 1
lincs-order              = 4
continuation             = no

;----------------------------------------------------
; ELECTROSTATICS CHARMM
;----------------------------------------------------
coulombtype            = PME
rcoulomb               = 1.2
pme-order              = 4
fourierspacing         = 0.16
ewald-rtol             = 1e-6

;----------------------------------------------------
; VDW CHARMM
;----------------------------------------------------
vdw-type                = cut-off
rvdw                    = 1.2
vdw-modifier            = force-switch
rvdw-switch             = 1.0
DispCorr                = no


;----------------------------------------------------
; ELECTROSTATICS AMBER
;----------------------------------------------------
;coulombtype            = PME
;rcoulomb               = 1.0

;----------------------------------------------------
; VDW AMBER 
;----------------------------------------------------
;rvdw                    = 1.0
;vdw-modifier            = Potential-shift-Verlet
;DispCorr                = EnerPres
;fourierspacing          = 0.125


;----------------------------------------------------
; TEMPERATURE & PRESSURE COUPL
;----------------------------------------------------
Tcoupl              = no
Pcoupl              = no
gen_vel             = no
